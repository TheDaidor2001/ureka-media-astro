---
interface Props {
    title?: string;
    subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<div>
    <p class="text-2xl md:text-3xl font-bold text-center">
        {title}
        <slot />
    </p>
    <p class="text-xs md:text-sm ml-1 text-center text-gray-600">{subtitle}</p>
</div>
